{
  "files_directory": "/etc/bcd",
  "search": {
    "uri": "http://elastic:9200"
  },
  "sentry": {
    "project": "indexer",
    "debug": false
  },
  "mq": {
    "uri": "amqp://guest:guest@mq:5672/",
    "queues": [
      "operations",
      "contracts",
      "migrations",
      "recalc"
    ]
  },
  "indexers": {
    "mainnet": {
      "rpc": {
        "url": "https://rpc.tzkt.io/mainnet",
        "timeout": 20
      },
      "boost": true,
      "external_indexer": {
        "type": "tzkt",
        "link": "https://api.tzkt.io/v1/",
        "timeout": 20
      }
    },
    "zeronet": {
      "rpc": {
        "url": "https://rpc.tzkt.io/zeronet",
        "timeout": 20
      },
      "boost": true,
      "external_indexer": {
        "type": "tzkt",
        "link": "https://api.zeronet.tzkt.io/v1/",
        "timeout": 20
      }
    },
    "babylonnet": {
      "rpc": {
        "url":"https://rpc.tzkt.io/babylonnet",
        "timeout": 20
      },
      "boost": true,
      "external_indexer": {
        "type": "tzkt",
        "link": "https://api.babylon.tzkt.io/v1/",
        "timeout": 20
      }
    },
    "carthagenet": {
      "rpc": {
        "url": "https://rpc.tzkt.io/carthagenet",
        "timeout": 20
      },
      "boost": true,
      "external_indexer": {
        "type": "tzkt",
        "link": "https://api.carthage.tzkt.io/v1/",
        "timeout": 20
      }
    }
  }
}
